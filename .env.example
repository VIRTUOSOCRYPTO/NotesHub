# Database connection details
# These are needed for the app to connect to PostgreSQL

# Full database connection string
DATABASE_URL=postgresql://username:password@localhost:5432/noteshub

# Individual PostgreSQL connection parameters
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=noteshub

# Frontend configuration
# API Base URL for frontend to connect to backend
# For development:
VITE_API_BASE_URL=http://localhost:5000/api/
# For production with Replit backend:
# VITE_API_BASE_URL=https://your-project-name.your-username.repl.co/api/

# Firebase configuration
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id

# Node environment (development or production)
NODE_ENV=development

# Security settings
# Force HTTPS even in development (true/false)
FORCE_SECURE_COOKIES=false

# Force HSTS headers even in development (true/false)
FORCE_HSTS=false

# Domain restriction for cookies (optional)
# COOKIE_DOMAIN=noteshub.example.com

# Certificate pinning in strict mode (true/false)
# STRICT_CERT_PINNING=false

# Session secret for cookie encryption (will use a secure random value if not set)
# SESSION_SECRET=